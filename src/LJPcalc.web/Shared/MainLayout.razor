    <header>
        <h1 class="display-4">LJPcalc</h1>
        <h4 class="lead">Liquid Junction Potential Calculator</h4>
    </header>

    @Body

<footer class="text-muted mt-5">
    <div>
        <a href='https://swharden.com/software/LJPcalc'>
